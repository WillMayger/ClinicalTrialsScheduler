        <PasswordBox x:Name="passwordInput" Height="22" Margin="295,0,278,190" VerticalAlignment="Bottom" Tag="Password"/>
        <Label x:Name="label" Content="Password" Height="27" Margin="290,0,316,212" VerticalAlignment="Bottom"/>
        <TextBox x:Name="emailInput" Height="22" Margin="295,227,278,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Email" Height="27" Margin="290,200,316,0" VerticalAlignment="Top"/>
        <Button x:Name="loginBtn" Click="OnClickLogin" Content="Login" Height="45" Margin="295,0,278,101" VerticalAlignment="Bottom" Background="#FFB891F0" FontWeight="Bold"/>

    </Grid>
</Window>
